[Unit]
Description=Claude CLI Proxy Server
After=network.target

[Service]
Type=simple
WorkingDirectory=%h/claude-cli-proxy
ExecStart=/usr/bin/node server.js
Restart=on-failure
RestartSec=5
Environment="CLAUDE_PROXY_PORT=8787"
# Uncomment for debug logging:
# Environment="DEBUG=1"
# Uncomment and adjust if Claude CLI is not in PATH:
# Environment="CLAUDE_PATH=%h/.local/bin/claude"

[Install]
WantedBy=default.target
